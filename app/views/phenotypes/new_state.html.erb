    <tr><td>Symbol</td><td><input type="text" name="state[polarity]" /></td></tr>
    <tr><td>State</td><td><input type="text" name="state[name]" /></td></tr>
    <tr><td>Description</td><td><textarea name="state[description]" cols=30 rows=6></textarea></td></tr>
    <tr><td></td><td><input type="submit" value="Save" />&nbsp;<input type="button" value="Cancel"  onClick="window_close();" /></td></tr>
