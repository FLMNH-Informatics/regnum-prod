#create_clade
  %h3 New Submission
  %form{:action => save_path, :method => :post}
    %input{:type => :hidden, :name => :submission_id, :value => :new}
    %table
      %tr
        %td.title Name:
      %tr
        %td
          %input{:name => 'name', :id => 'name', :type => :text, :size => 30}
      %tr
        %td.title          
          #opt-out-box
            %input{:type => "checkbox" , :name => "opt-out", :id => 'opt-out'}
            Opt-out of Phylocode           
            #opt-out-table{:style => 'display:none;padding-top:10px;'}          
              %table
                %tr
                  %td{ :style => "font-weight:bold;"} 
                    Reason for Opt-out
                    %span{:style => 'font-size:9px;color:darkred;font-weight:normal;'} required 
                %tr
                  %td
                    %textarea{:name => 'reason', :id => 'reason', :rows => 8, :cols => 41}            
      %tr
        %td
          %input{:type => :submit, :value => 'create', :id => 'create_button'}