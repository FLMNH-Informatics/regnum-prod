.new_account_box
  %form{ :action => '/accounts', :method => 'post' }
    .container-fluid
      .row
        .form-group.col-sm-12
          %h1 Sign up
      .row
        .form-group.col-sm-12
          %label{for: "accounts[first_name]"} First Name
          %input.form-control{:type => 'text', :name => "account[first_name]"}
      .row
        .form-group.col-sm-12
          %label{for: "accounts[first_name]"} Last Name
          %input.form-control{:type => 'text', :name => "account[last_name]"}
      .row
        .form-group.col-sm-12
          %label{for: "accounts[institution]"} Institution
          %input.form-control{:type => 'text', :name => "account[institution]"}
      .row
        .form-group.col-sm-12
          %label{for: "accounts[email]"} Email
          %input.form-control{:type => 'email', :name => "account[email]"}
      .row
        .form-group.col-sm-12
          %label{for: "accounts[first_name]"} Password
          %input.form-control{:type => 'password', :name => "account[password]"}
      .row
        .form-group.col-sm-12
          %label{for: "accounts[first_name]"} Password Confirmation
          %input.form-control{:type => 'password', :name => "account[password_confirmation]"}
      .row
        .form-group.col-sm-12
          %label reCAPTCHA
          = recaptcha_tags
      .row
        .form-group.col-sm-12
          %button.form-control{:type => 'submit'} Submit
  %a{:style => 'font-size:10px;',:href => '/login'} return to login


