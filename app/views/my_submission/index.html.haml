  %form{:action => '/my_submission', :method => :get, :id => 'search-form'}
    %table{:style => 'width:100%;'}
      %tr
        %td.bold My Submissions Search: 
      %tr
        %td{:style => 'text-align:left;'} 
          %input{:type => :text, :size => 25, :name => 'term', :style => 'height:27px;'}
